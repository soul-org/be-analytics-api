{
    "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 120
    },
    "files": {
        "ignore": [
            "build/**",
            "coverage/**"
        ]
    }
}